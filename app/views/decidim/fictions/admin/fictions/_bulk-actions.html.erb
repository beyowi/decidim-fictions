<div class="flex--cc flex-gap--1">
  <%= render partial: "decidim/fictions/admin/fictions/bulk_actions/dropdown" %>

  <div id="js-other-actions-wrapper">
    <% if component_settings.participatory_texts_enabled? %>
      <%= link_to t("actions.participatory_texts", scope: "decidim.fictions"), participatory_texts_path, id: "participatory_texts", class: "button tiny button--simple" %>
    <% end %>
    <%= link_to t("actions.import", scope: "decidim.fictions", name: t("models.fiction.name", scope: "decidim.fictions.admin")), new_fictions_import_path, class: "button tiny button--simple" if allowed_to? :import, :fictions %>

    <% if allowed_to? :export, :fictions %>
      <%= export_dropdown %>
    <% end %>

    <% if allowed_to? :create, :fiction %>
      <%= link_to t("actions.new", scope: "decidim.fictions"), new_fiction_path, class: "button tiny button--simple" %>
    <% end %>
  </div>

  <%= render partial: "decidim/fictions/admin/fictions/bulk_actions/recategorize" %>
  <%= render partial: "decidim/fictions/admin/fictions/bulk_actions/scope-change" %>
  <%= render partial: "decidim/fictions/admin/fictions/bulk_actions/merge" %>
  <%= render partial: "decidim/fictions/admin/fictions/bulk_actions/split" %>
  <%= render partial: "decidim/fictions/admin/fictions/bulk_actions/assign_to_valuator" %>
  <%= render partial: "decidim/fictions/admin/fictions/bulk_actions/unassign_from_valuator" %>
  <%= render partial: "decidim/fictions/admin/fictions/bulk_actions/publish_answers" %>
</div>
