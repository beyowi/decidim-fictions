<% add_decidim_page_title(fiction_wizard_step_title(action_name)) %>

<div class="row">
  <%= render partial: "wizard_aside" %>

  <div class="columns large-6">
    <%= render partial: "wizard_header", locals: { callout_help_text_class: "warning" } %>
    <%= render partial: "fiction_preview", locals: { fiction: @fiction } %>
    <div class="p-l">
      <div class="row column flex-center">
        <%= link_to t(".modify"), edit_draft_fiction_path(@fiction) %>
        <%= button_to t(".publish"), publish_fiction_path(@fiction), method: :post, class: "button button--nomargin small" %>
      </div>
    </div>
  </div>
  <div class="columns large-3"></div>
</div>
