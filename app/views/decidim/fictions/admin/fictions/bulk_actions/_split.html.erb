<div id="js-split-fictions-actions" class="hide js-bulk-action-form">
  <%= form_tag(fictions_split_path, method: :post, id: "js-form-split-fictions", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% fictions.each do |fiction| %>
        <%= check_box_tag "fiction_ids[]", fiction.id, false, class: "js-check-all-fiction js-fiction-id-#{fiction.id}" %>
      <% end %>
    </div>

    <%= bulk_components_select((current_component.siblings + [current_component])) %>

    <%= submit_tag(t("decidim.fictions.admin.fictions.index.split_button"), id: "js-submit-split-fictions", class: "button small button--simple float-left") %>

    <button id="js-cancel-split-fictions" class="button tiny clear compact js-cancel-bulk-action" type="button"><%= t("decidim.fictions.admin.fictions.index.cancel") %></button>
  <% end %>
</div>
