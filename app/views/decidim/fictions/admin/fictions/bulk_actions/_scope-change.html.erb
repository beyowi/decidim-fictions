<div id="js-scope-change-fictions-actions" class="hide js-bulk-action-form">
  <%= form_tag(update_scope_fictions_path, method: :post, remote: true, id: "js-form-scope-change-fictions", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% fictions.each do |fiction| %>
        <%= check_box_tag "fiction_ids[]", fiction.id, false, class: "js-check-all-fiction js-fiction-id-#{fiction.id}" %>
      <% end %>
    </div>

    <%= scopes_picker_tag(
          :scope_id,
          try(:current_participatory_space)&.scope,
          field: t("models.fiction.fields.scope", scope: "decidim.fictions")
        ) %>

    <%= submit_tag(
          t("decidim.fictions.admin.fictions.index.update_scope_button"),
          id: "js-submit-scope-change-fictions",
          class: "button small button--simple float-left"
        ) %>

    <button id="js-cancel-scope-change-fictions" class="button tiny clear compact js-cancel-bulk-action" type="button">
      <%= t("decidim.fictions.admin.fictions.index.cancel") %>
    </button>
  <% end %>
</div>
