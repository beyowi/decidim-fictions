<div class="column">
  <div class="card card--fiction">
    <div class="card__content">
      <div class="card__header">
        <%= link_to fiction, target: "_blank" do %>
          <h5 class="card__title"><%= decidim_html_escape(present(fiction).title).html_safe %></h5>
        <% end %>
        <%= cell("decidim/coauthorships", fiction, has_actions: false, context: { current_user: current_user }) %>

        <div class="tech-info tech-info--text-left">
          <%= t("decidim.fictions.fictions.fiction.creation_date", date: l(fiction.created_at, format: :decidim_short)) %>
        </div>
        <%= resource_reference(fiction, class: "tech-info--text-left") %>
      </div>

      <%== cell("decidim/fictions/fiction_m", fiction).badge %>

      <p><%= truncate(present(fiction).body(strip_tags: true), length: 100) %></p>
      <%= cell "decidim/tags", fiction, context: { extra_classes: ["tags--fiction"] } %>
    </div>
  </div>
</div>
