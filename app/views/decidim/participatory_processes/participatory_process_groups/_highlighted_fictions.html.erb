<% if fictions.any? %>
    <section class="section row collapse highlighted_fictions">
      <h2 class="section-heading"><%= t(".fictions") %></h2>

      <%= cell(
        "decidim/collapsible_list",
        fictions,
        cell_options: {},
        list_class: "row small-up-1 medium-up-2 large-up-3 card-grid",
        size: fictions.count
        ) %>
    </section>
<% end %>
