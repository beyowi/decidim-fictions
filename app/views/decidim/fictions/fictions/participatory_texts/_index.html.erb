<div class="p-s">
  <h4><%= t(".document_index") %></h4>
  <div class="text-muted">
    <% @fictions.each do |fiction| %>
      <div class="mb-s">
        <p>
          <%= link_to resource_locator(fiction).path do %>
            <% if fiction.participatory_text_level == "article" %>
              <u><%= decidim_html_escape(present(fiction).title).html_safe %></u>
            <% else %>
              <u><%= decidim_html_escape(present(fiction).title).html_safe %></u>
            <% end %>
            <br>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
