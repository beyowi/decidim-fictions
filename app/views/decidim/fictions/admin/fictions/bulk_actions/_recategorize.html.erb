<div id="js-recategorize-fictions-actions" class="hide js-bulk-action-form">
  <%= form_tag(update_category_fictions_path, method: :post, remote: true, id: "js-form-recategorize-fictions", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% fictions.each do |fiction| %>
        <%= check_box_tag "fiction_ids[]", fiction.id, false, class: "js-check-all-fiction js-fiction-id-#{fiction.id}" %>
      <% end %>
    </div>

    <%= bulk_categories_select current_component.categories %>

    <%= submit_tag(t("decidim.fictions.admin.fictions.index.update"), id: "js-submit-edit-category", class: "button small button--simple float-left") %>

    <button id="js-cancel-edit-category" class="button tiny clear compact js-cancel-bulk-action" type="button"><%= t("decidim.fictions.admin.fictions.index.cancel") %></button>
  <% end %>
</div>
