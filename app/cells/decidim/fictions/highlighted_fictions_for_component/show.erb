<section class="section row collapse highlighted_fictions">
  <h3 class="section-heading">
    <%= translated_attribute(model.name) %>  <a href="<%= main_component_path(model) %>" class="text-small"><%= t("decidim.participatory_spaces.highlighted_fictions.see_all", count: fictions_count) %></a>
  </h3>

  <%= cell(
    "decidim/collapsible_list",
    fictions_to_render,
    cell_options: {},
    list_class: "row small-up-1 medium-up-2 card-grid",
    size: fictions_count
    ) %>

  <%= link_to(
    t("decidim.participatory_spaces.highlighted_fictions.see_all", count: fictions_count),
    main_component_path(model),
    class: "button button--sc hollow button--right"
  ) %>
</section>
